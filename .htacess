RewriteEngine On

# Detecta o caminho da pasta atual (caso esteja em subdiretório)
RewriteBase /

# Redireciona tudo para a pasta /public, exceto se já for para /public, /vendor, ou arquivos existentes
RewriteCond %{REQUEST_URI} !^/public/
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)$ public/$1 [L]

# Opcional: redirecionar a raiz diretamente para public/index.php
DirectoryIndex public/index.php
